@model IEnumerable<RadioConexionLatam.Models.Eventos>
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

@section Styles {
    <style>
        .eventos-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .evento-publicitario {
            flex: 1 1 calc(33.333% - 20px);
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            background-color: #f9f9f9;
            box-sizing: border-box;
            max-width: 400px;
        }

            .evento-publicitario .imagen {
                width: 100%;
                text-align: center;
                padding: 10px;
            }

                .evento-publicitario .imagen img {
                    width: 100%;
                    height: 200px;
                    object-fit: cover;
                    border-radius: 10px;
                }

            .evento-publicitario .info {
                margin-top: 20px;
                text-align: center;
            }

                .evento-publicitario .info h2 {
                    font-size: 2em;
                    margin-bottom: 10px;
                }

                .evento-publicitario .info p {
                    font-size: 1.2em;
                    margin: 5px 0;
                }

            .evento-publicitario .entradas {
                margin-top: 20px;
                text-align: left;
                width: 100%;
            }

                .evento-publicitario .entradas h3 {
                    margin-bottom: 10px;
                }

                .evento-publicitario .entradas ul {
                    list-style: none;
                    padding: 0;
                }

                    .evento-publicitario .entradas ul li {
                        margin-bottom: 10px;
                        font-size: 1.1em;
                    }

            .evento-publicitario .comprar {
                margin-top: 20px;
                text-align: center;
                width: 100%;
            }

                .evento-publicitario .comprar button {
                    padding: 10px 20px;
                    font-size: 1.2em;
                    background-color: #d9534f;
                    color: white;
                    border: none;
                    cursor: pointer;
                    width: 100%;
                }

            .evento-publicitario .extra-info {
                margin-top: 20px;
                text-align: center;
                font-size: 0.9em;
                color: #888;
            }

        .eventos-container .evento-publicitario:nth-child(3n+1) {
            clear: both;
        }
    </style>
}

<div class="jumbotron">
    <div class="eventos-container">
        @foreach (var evento in Model.Where(e => e.estado == "A"))
        {
            <div class="evento-publicitario">
                @if (evento.Imagen != null)
                {
                    <div class="imagen">
                        <img src="data:image;base64,@Convert.ToBase64String(evento.Imagen)" alt="Imagen del evento" />
                    </div>
                }
            <div class="info">
                <h2>@evento.nombreEvento</h2>
                <p>@evento.descripcion</p>
                <p><strong>Fecha:</strong> @evento.fechaEvento.ToString("dddd, dd MMMM yyyy")</p>
                <p><strong>Hora:</strong> @evento.fechaEvento.ToString("hh:mm tt")</p>
                <p><strong>Lugar:</strong> @evento.lugar</p>
                <p><strong>Organizador:</strong> @evento.organizador</p>
            </div>
                <div class="entradas">
                    <h3>Entradas</h3>
                    <ul>
                        <li><strong>Preferencial:</strong> USD 25.00</li>
                    </ul>
                </div>           
                <div class="comprar">
                    <button onclick="pagar('@evento.nombreEvento', 25.00)"><i class="fab fa-paypal"></i>Comprar ahora</button>
                </div>
                <div class="extra-info">
                    <p>* Te informamos que tus datos personales serán compartidos con el organizador del evento.</p>
                    <p>* Apto para menores de 18 años en compañía de un adulto.</p>
                </div>
            </div>
        }
    </div>
</div>
@section scripts{
    <script>
        function pagar(producto, precio) {
            var body = {
                precio: precio,
                producto: producto
            };

            jQuery.ajax({
                url: '@Url.Action("Paypal", "Eventos")',
                type: "POST",
                data: JSON.stringify(body),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    console.log(data);
                    $("div.jumbotron").LoadingOverlay("hide");

                    if (data.status) {
                        var jsonresult = JSON.parse(data.respuesta);
                        var links = jsonresult.links;
                        var resultado = links.find(item => item.rel === "approve");
                        window.location.href = resultado.href;
                    } else {
                        alert("Hubo un problema al procesar el pago. Por favor, inténtelo más tarde.");
                    }
                },
                error: function (xhr, status, error) {
                    console.log(xhr.responseText);
                    alert("Error: " + error);
                },
                beforeSend: function () {
                    $("div.jumbotron").LoadingOverlay("show");
                }
            });
        }
    </script>
}