<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MiRadioWeb</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/Site.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    @RenderSection("Styles", required: false)
    <style>
        .background-video {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: -1;
        }

            .background-video video {
                min-width: 100%;
                min-height: 100%;
                width: auto;
                height: auto;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                background-size: cover;
            }

        .content {
            position: relative;
            z-index: 1;
        }

        .card {
            background: rgba(255, 255, 255, 0.5);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .card-body {
            background: rgba(255, 255, 255, 0.5);
            padding: 15px;
        }

        .footer {
            background-color: rgba(51, 51, 51, 0.8);
        }
    </style>
</head>
<body>
    <div class="background-video">
        <video autoplay loop muted>
            <source src="~/Content/videofondo/Paisaje Anime 4K.mp4" type="video/mp4">
            Tu navegador no soporta la etiqueta de video.
        </video>
    </div>

    <header>
        <div class="text-center" style="background-color: #6422df;">
            <img src="~/Content/images/logo.png" alt="Logo de Radio Conexion LATAM" class="logo">
        </div>
        <nav class="navbar navbar-expand-lg navbar-dark custom-bg-color">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="~/Default/Index">NOTICIAS</a>
                        </li>
                        <li class="nav-item px-2">|</li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Internacionales/Index">INTERNACIONALES</a>
                        </li>
                        <li class="nav-item px-2">|</li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Programacion/Index">PROGRAMACION</a>
                        </li>
                        <li class="nav-item px-2">|</li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Default/Nosotros">¿QUIÉNES SOMOS?</a>
                        </li>
                        <li class="nav-item px-2">|</li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Eventos/VistaPublicitaria">EVENTOS</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <audio controls class="custom-audio-player">
                                <source src="https://stream-170.zeno.fm/yxynr8zy71zuv?zs=CBt9_4NJR0S-g7RGQMMwYA" type="audio/mpeg">
                                Your browser does not support the audio element.
                            </audio>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container content">
        @RenderBody()
    </main>

    <div class="container-fluid py-5" style="background: linear-gradient(135deg, #6422df, #ec008c);">
        <div class="container text-black">
            <h4 class="text-center mb-4" style="color: white; font-weight: bold; text-shadow: 2px 2px 4px #000;">Descubre más en nuestras plataformas</h4>
            <div class="row text-center">
                <div class="col-md-4 mb-3">
                    <h5 style="color: white;"><i class="fab fa-spotify fa-2x"></i> Escúchanos:</h5>
                    <a href="https://goo.su/AEtL" class="text-white d-block"><i class="fab fa-spotify"></i> Spotify</a>
                    <a href="#" class="text-white d-block"><i class="fab fa-apple"></i> Apple Podcasts</a>
                    <a href="https://www.mixcloud.com/radioconexion/" class="text-white d-block"><i class="fas fa-cloud"></i> Mixcloud</a>
                </div>
                <div class="col-md-4 mb-3">
                    <h5 style="color: white;"><i class="fas fa-users fa-2x"></i> Síguenos:</h5>
                    <a href="https://www.facebook.com/radioconexionLATAM" class="text-white d-block"><i class="fab fa-facebook"></i> Facebook</a>
                    <a href="https://www.instagram.com/radioconexion_latam/" class="text-white d-block"><i class="fab fa-instagram"></i> Instagram</a>
                    <a href="#" class="text-white d-block"><i class="fab fa-twitter"></i> Twitter</a>
                    <a href="https://www.youtube.com/channel/UCCVlwnb2MW6nnhGVYr7vHVg" class="text-white d-block"><i class="fab fa-youtube"></i> YouTube</a>
                </div>
                <div class="col-md-4 mb-3">
                    <h5 style="color: white;"><i class="fas fa-comments fa-2x"></i> Comunícate:</h5>
                    <a href="https://api.whatsapp.com/send?phone=51936030586&text=Hola!%20Bienvenido%20a%20Radio%20Conexi%C3%B3n%20LATAM!%20%C2%BFEn%20qu%C3%A9%20podemos%20ayudarte%20o%20brindarte%20info%20sobre%20alguna%20de%20nuestras%20actividades%3F" class="text-white d-block"><i class="fab fa-whatsapp"></i> WhatsApp</a>
                    <a href="https://discord.com/invite/CZmzfgjSYE" class="text-white d-block"><i class="fab fa-discord"></i> Discord</a>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer text-center text-white" style="background-color: #333;">
        <p>&copy; @DateTime.Now.Year - Radio Conexion LATAM</p>
    </footer>

    <script src="~/Content/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-loading-overlay/2.1.7/loadingoverlay.min.js"></script>
</body>
</html>
