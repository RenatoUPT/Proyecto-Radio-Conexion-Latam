@model IEnumerable<RadioConexionLatam.Models.Internacionales>

@{
    ViewBag.Title = "Internacionales";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
}

<div class="container">
    <h2>Noticias Internacionales</h2>

    <form method="get" action="@Url.Action("Index", "Internacionales")">
        <div class="form-group">
            @Html.Label("Categorías")
            @Html.DropDownList("categoria", (SelectList)ViewBag.Categorias, new { @class = "form-control", onchange = "this.form.submit();" })
        </div>
    </form>

    <div class="row news-container">
        @foreach (var item in Model)
        {
            <div class="col-md-4 news-item">
                <div class="card news-card">
                    @if (!string.IsNullOrEmpty(item.ImagenUrl))
                    {
                        <img src="@item.ImagenUrl" class="card-img-top" alt="Imagen de @item.Titulo">
                    }
                    <div class="card-body news-card-body">
                        <h5 class="card-title">@item.Titulo</h5>
                        <p class="card-text">@item.Descripcion</p>
                        <p class="card-text"><small class="text-muted">@item.Fecha</small></p>
                        <a href="@item.Url" class="btn btn-primary" target="_blank">Leer más</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (currentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { categoria = ViewBag.CategoriaSeleccionada, page = currentPage - 1 })">Anterior</a>
                </li>
            }

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { categoria = ViewBag.CategoriaSeleccionada, page = i })">@i</a>
                </li>
            }

            @if (currentPage < totalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { categoria = ViewBag.CategoriaSeleccionada, page = currentPage + 1 })">Siguiente</a>
                </li>
            }
        </ul>
    </nav>
</div>

<!-- Sección de Publicidad -->
<div class="container mt-4">
    <h2>Redes Sociales</h2>
    <div class="row social-media-container">
        <!-- Facebook Plugin -->
        <div class="col-lg-3 col-md-6 col-sm-12 mb-4 social-media-item">
            <div class="card bg-dark text-light" style="width: 100%;">
                <div class="card-header bg-primary">
                    <i class="fab fa-facebook-f"></i> Facebook
                </div>
                <div class="card-body" style="height: 500px;">
                    <div class="fb-page" data-href="https://www.facebook.com/radioconexionLATAM" data-tabs="timeline" data-width="340" data-height="500" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true">
                        <blockquote cite="https://www.facebook.com/radioconexionLATAM" class="fb-xfbml-parse-ignore">
                            <a href="https://www.facebook.com/radioconexionLATAM">Radio Conexión LATAM</a>
                        </blockquote>
                    </div>
                </div>
            </div>
        </div>
        <!-- Instagram Widget -->
        <div class="col-lg-3 col-md-6 col-sm-12 mb-4 social-media-item">
            <div class="card bg-dark text-light" style="width: 100%;">
                <div class="card-header bg-danger">
                    <i class="fab fa-instagram"></i> Instagram
                </div>
                <div class="card-body" style="height: 500px;">
                    <iframe src="https://www.instagram.com/radioconexion_latam/embed" width="100%" height="100%" frameborder="0"></iframe>
                </div>
            </div>
        </div>
        <!-- Discord Widget -->
        <div class="col-lg-3 col-md-6 col-sm-12 mb-4 social-media-item">
            <div class="card bg-dark text-light" style="width: 100%;">
                <div class="card-header bg-success">
                    <i class="fab fa-discord"></i> Discord
                </div>
                <div class="card-body" style="height: 500px;">
                    <iframe src="https://discord.com/widget?id=1030608308480004106&theme=dark" width="100%" height="100%" allowtransparency="true" frameborder="0"></iframe>
                </div>
            </div>
        </div>
        <!-- Lista de Música -->
        <div class="col-lg-3 col-md-6 col-sm-12 mb-4 social-media-item">
            <div class="card bg-dark text-light" style="width: 100%;">
                <div class="card-header bg-danger">
                    Las últimas 10 rolas
                </div>
                <div class="card-body" style="height: 500px; overflow-y: auto;">
                    <ul class="list-group list-group-flush">
                        @{
                            int i = 1;
                        }
                        @if (ViewBag.UltimasCanciones != null)
                        {
                            foreach (var cancion in ViewBag.UltimasCanciones)
                            {
                                <li class="list-group-item bg-dark text-light">
                                    <a href="@cancion.Url" class="text-light">@i. @cancion.Titulo</a>
                                </li>
                                i++;
                            }
                        }
                        else
                        {
                            <li class="list-group-item bg-dark text-light">No se pudieron obtener las canciones</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section styles {
    <style>
        .news-container .news-item {
            margin-bottom: 30px;
        }

        .news-container .card {
            height: 100%;
            background: rgba(255, 255, 255, 0.5); /* Fondo blanco con 50% opacidad */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .news-card-body {
            background: rgba(255, 255, 255, 0.5); /* Fondo blanco con 50% opacidad */
            padding: 15px;
        }

        .social-media-container .social-media-item {
            margin-bottom: 30px;
        }

        .social-media-container .card {
            height: 100%;
        }

        .social-media-container .card-body {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 0;
        }

            .social-media-container .card-body .fb-page {
                width: 100% !important;
            }
    </style>
}
